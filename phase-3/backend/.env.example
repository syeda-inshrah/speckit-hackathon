# Backend Environment Variables
# Copy this file to .env and fill in the values

# Database Connection (Neon PostgreSQL)
# Format: postgresql://user:password@host/database


DATABASE_URL=postgresql://neondb_owner:npg_qhZgFa9Ls1Jz@ep-billowing-violet-ahbfodkd-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Better Auth Secret (must match frontend secret)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-replace-this

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:3000

# LLM Provider Selection
# Options: OPENROUTER or GROQ
LLM_PROVIDER=OPENROUTER

# OpenRouter Configuration (OpenAI-compatible API)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# Alternative models:
# - openai/gpt-4-turbo
# - anthropic/claude-3-opus
# - meta-llama/llama-3.1-70b-instruct
# - google/gemini-pro-1.5

# Groq Configuration (OpenAI-compatible API)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama-3.3-70b-versatile
# Alternative models:
# - llama-3.1-70b-versatile
# - llama-3.1-8b-instant
# - mixtral-8x7b-32768
# - gemma2-9b-it

# OpenAI Agents SDK Configuration
AGENT_NAME=TodoAssistant
AGENT_INSTRUCTIONS=You are a helpful AI assistant for managing todo tasks. Help users create, read, update, and complete their tasks using natural language.
MAX_TOKENS=2000
TEMPERATURE=0.7
